#!/usr/bin/env sh

set -e

# Check if there are staged changes
if [ -z "$(git diff --cached --name-only)" ]; then
  echo "No staged changes found. Use 'git add' to stage files first."
  exit 1
fi

# Check if claude command is available
if ! command -v claude >/dev/null 2>&1; then
  npm install -g @anthropic-ai/claude-code >/dev/null 2>&1

  if ! command -v claude >/dev/null 2>&1; then
    echo "Error: Failed to install claude command"
    exit 1
  fi
fi

# Generate commit message using claude
commit_message=$(claude "Look at the staged git changes and create a concise commit message that describes what was changed. Return only the commit message, nothing else.")

if [ -z "$commit_message" ]; then
  echo "Error: Failed to generate commit message"
  exit 1
fi

git commit -m "$commit_message" --edit
