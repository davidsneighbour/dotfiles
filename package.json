    "simple-git-hooks": "2.13.1",
    "toml": "3.0.0",
    "wireit": "0.14.12"
  },
  "devDependencies": {
    "dompurify": ">=3.3.1",
    "nanoid": ">=5.1.6"
  },
  "scripts": {
    "clean": "rimraf logs/*.log",
    "link:prepare": "wireit",
    "lint:hook:commit": "lint-staged --quiet",
    "lint:hook:commit:loud": "lint-staged --debug --verbose",
    "lint:config": "yamllint -c .yamllint.yml etc/*.yaml",
    "release": "commit-and-tag-version -a -t \"v\" --releaseCommitMessageFormat \"chore(release): v{{currentTag}}\" && ./bashrc/helpers/postrelease"
  },
  "wireit": {
    "link:prepare": {
      "command": "npx link"
    }
  },
  "main": "index.js",
  "simple-git-hooks": {
    "pre-commit": "npm run lint:hook:commit"
  },
  "type": "module"
}
