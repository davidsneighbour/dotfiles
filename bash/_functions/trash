# see https://www.stefanjudis.com/snippets/a-native-shell-alternative-to-the-trash-cli/
function trash() {
  echo "ğŸ—‘ï¸  Moving files to trash..."
  for var in "$@"; do
    mv "$var" "$HOME/.trash"
  done
}
