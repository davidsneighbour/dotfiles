{
  "js/ts.implicitProjectConfig.checkJs": true,
  "files.autoSave": "onFocusChange",
  "telemetry.telemetryLevel": "crash",
  "git.autofetch": "all",
  "editor.fontFamily": "'Fira Code', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
  "editor.wordWrap": "on",
  "editor.accessibilitySupport": "off",
  "editor.autoClosingBrackets": "always",
  "editor.autoClosingDelete": "always",
  "editor.autoClosingQuotes": "always",
  "editor.bracketPairColorization.enabled": true,
  "editor.lineNumbers": "on",
  "editor.tabSize": 2,
  "editor.cursorBlinking": "expand",
  "editor.cursorSmoothCaretAnimation": true,
  "editor.fontLigatures": true,
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "diffEditor.codeLens": true,
  "editor.minimap.renderCharacters": false,
  "editor.minimap.size": "fit",
  "editor.quickSuggestions": {
    "other": true,
    "comments": true,
    "strings": true
  },
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "workbench.commandPalette.history": 100,
  "workbench.enableExperiments": false,
  "workbench.editor.closeOnFileDelete": true,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.scrollToSwitchTabs": true,
  "workbench.settings.openDefaultKeybindings": true,
  "workbench.settings.openDefaultSettings": true,
  "workbench.settings.useSplitJSON": true,
  "window.autoDetectColorScheme": true,
  "workbench.preferredDarkColorTheme": "One Dark Pro Darker",
  "window.menuBarVisibility": "visible",
  "explorer.incrementalNaming": "smart",
  "search.useGlobalIgnoreFiles": true,
  "debug.console.fontFamily": "'Fira Code'",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.copyOnSelection": true,
  "problems.showCurrentInStatus": true,
  "update.mode": "start",
  "css.lint.boxModel": "warning",
  "scss.lint.boxModel": "warning",
  "git.allowForcePush": true,
  "git.allowNoVerifyCommit": true,
  "git.alwaysSignOff": true,
  "git.autoStash": true,
  "git.defaultCloneDirectory": "/home/patrick/Projects",
  "html.format.endWithNewline": true,
  "html.format.indentHandlebars": true,
  "html.format.templating": true,
  "html.format.wrapAttributes": "aligned-multiple",
  "oneDarkPro.bold": true,
  "merge-conflict.autoNavigateNextConflict.enabled": true,
  "oneDarkPro.editorTheme": "One Dark Pro Flat",
  "workbench.editor.enablePreview": false,
  "workbench.colorCustomizations": {
    "editorCursor.foreground": "#33ff00",
    "terminalCursor.foreground": "#33ff00"
  },
  "oneDarkPro.vivid": true,
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "terminal.integrated.persistentSessionReviveProcess": "never",
  "screencastMode.onlyKeyboardShortcuts": true,
  "screencastMode.mouseIndicatorColor": "#33ff00",
  "screencastMode.mouseIndicatorSize": 40,
  "screencastMode.keyboardShortcutsFormat": "commandAndKeys",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.guides.bracketPairs": true,
  "editor.linkedEditing": true,
  "explorer.confirmDelete": false,
  "prettier.requireConfig": true,
  "files.insertFinalNewline": true,
  // shellcheck configuration
  "shellcheck.enable": true,
  "shellcheck.enableQuickFix": true,
  "shellcheck.run": "onSave", // also: "onSave"
  "shellcheck.executablePath": "",
  "shellcheck.customArgs": [],
  "shellcheck.ignorePatterns": {
    "**/*.xonshrc": true,
    "**/*.xsh": true,
    "**/*.zsh": true,
    "**/*.zshrc": true,
    "**/zshrc": true,
    "**/*.zprofile": true,
    "**/zprofile": true,
    "**/*.zlogin": true,
    "**/zlogin": true,
    "**/*.zlogout": true,
    "**/zlogout": true,
    "**/*.zshenv": true,
    "**/zshenv": true,
    "**/*.zsh-theme": true
  },
  "shellcheck.ignoreFileSchemes": ["git", "gitfs"],
  "shellcheck.useWorkspaceRootAsCwd": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.shellcheck": true
  },
  "workbench.colorTheme": "Gruvbox Material Dark",
  "gruvboxMaterial.colorfulSyntax": true,
  "gruvboxMaterial.darkContrast": "hard",
  "gruvboxMaterial.darkCursor": "red",
  "gruvboxMaterial.darkSelection": "green",
  "gruvboxMaterial.italicKeywords": true,
  "gruvboxMaterial.lightContrast": "hard",
  "gruvboxMaterial.lightCursor": "red",
  "workbench.iconTheme": "material-icon-theme",
  "material-icon-theme.hidesExplorerArrows": true,
  "material-icon-theme.showUpdateMessage": true,
  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.includeLanguages": {
    "markdown": "html"
  }
}
